                    data.qguar_za = $("#qguzarZA").val();
                    data.qguar_dostawa = $("#qguzarDostawa").val();
                    data.dostawca = $("#dostawca").val();
                    data.strXmlStatusy = przygotujWartosciWybrane(".chkfiltryStatusy:checked");
