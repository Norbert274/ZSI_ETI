@model nclprospekt.Models.KontaktWO

@{    ViewBag.Title = "Kontakt IT";}

@section scripts
    {
    <script src="@Url.Content("~/Scripts/custom-kontakt.js")" type="text/javascript"></script>
}


<!-- Page Heading -->


<div class="panel panel-default ">

    <div class="panel-heading">
        Uzyskaj pomoc:
    </div>

    <div class="panel-body">
        <div class="panel-group panel-accordion" id="accordion">

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-expanded="false" class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#divKontaktIT">
                            Kontakt w sprawach technicznych (działanie strony, komunikaty o błędach)
                        </a>
                    </h4>
                </div>
                <div id="divKontaktIT" class="panel-collapse collapse">
                    <div class="panel-body ">

                        <div class="form-group">

                            @using (Html.BeginForm("Contact", "Pomoc", FormMethod.Post, new { @id = "formKontaktIT", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)

                                <div class="col-xs-12">
                                    @Html.LabelFor(model => model.Tytul)
                                    @Html.TextBoxFor(model => model.Tytul, new { @class = "form-control sprawdzane" })
                                    @Html.ValidationMessageFor(model => model.Tytul)
                                </div>
                                <div class="col-xs-12">
                                    @Html.LabelFor(model => model.NazwaEkranu)
                                    @Html.TextBoxFor(model => model.NazwaEkranu, new { @class = "form-control sprawdzane" })
                                    @Html.ValidationMessageFor(model => model.NazwaEkranu)
                                </div>
                                <div class="col-xs-12">
                                    @Html.LabelFor(model => model.Tresc)
                                    @Html.TextAreaFor(model => model.Tresc, new { @class = "form-control sprawdzane", @style = "margin-top: 0px; margin-bottom: 0px; height: 90px; resize:none;" })
                                    @Html.ValidationMessageFor(model => model.Tresc)
                                </div>
                                @*@Html.HiddenFor(model => model.zrodloMaila)*@
                                <input type="hidden" value="2" name="zrodloMaila" id="zrodloMaila" />
                                <div class="col-xs-6">
                                    @Html.LabelFor(model => model.Plik)
                                    @Html.TextBoxFor(model => model.Plik, new { type = "file", @class = "sprawdzane" })
                                </div>


                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-lg btn-success btn-mobile alertNiezapisaniaZmian" id="btnKontaktITMailWyslij">
                                            <i class="fa fa-send">&nbsp;&nbsp;</i>
                                            Wyślij
                                        </button>
                                    </div>
                                </div>

                            }



                        </div>
                    </div>
                </div>


            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-expanded="false" class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#divKontaktOpiekun">
                            Kontakt do opiekuna projektu (Cursor)
                        </a>
                    </h4>
                </div>
                <div id="divKontaktOpiekun" class="panel-collapse collapse">
                    <div class="panel-body ">

                        <div class="form-group">


                            @using (Html.BeginForm("Contact", "Pomoc", FormMethod.Post, new { @id = "formKontaktOpiekun", enctype = "multipart/form-data" }))
                                {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)

                                <div class="col-xs-12">
                                    @Html.LabelFor(model => model.Tytul)
                                    @Html.TextBoxFor(model => model.Tytul, new { @class = "form-control sprawdzane" })
                                    @Html.ValidationMessageFor(model => model.Tytul)
                                </div>
                                <div class="col-xs-12">
                                    @Html.LabelFor(model => model.NazwaEkranu)
                                    @Html.TextBoxFor(model => model.NazwaEkranu, new { @class = "form-control sprawdzane" })
                                    @Html.ValidationMessageFor(model => model.NazwaEkranu)
                                </div>
                                <div class="col-xs-12">
                                    @Html.LabelFor(model => model.Tresc)
                                    @Html.TextAreaFor(model => model.Tresc, new { @class = "form-control sprawdzane", @style = "margin-top: 0px; margin-bottom: 0px; height: 90px; resize:none;" })
                                    @Html.ValidationMessageFor(model => model.Tresc)
                                </div>
                                @*@Html.HiddenFor(model => model.zrodloMaila)*@
                                <input type="hidden" value="3" name="zrodloMaila" id="zrodloMaila" />
                                <div class="col-xs-6">
                                    @Html.LabelFor(model => model.Plik)
                                    @Html.TextBoxFor(model => model.Plik, new { type = "file", @class = "sprawdzane" })

                                </div>

                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-lg btn-success btn-mobile alertNiezapisaniaZmian" id="btnKontaktOpiekunMailWyslij">
                                            <i class="fa fa-send">&nbsp;&nbsp;</i>
                                            Wyślij
                                        </button>
                                    </div>
                                </div>
                                }


                        </div>
                    </div>
                </div>


            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a aria-expanded="false" class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#divKontaktKlient">
                            Kontakt do opiekuna projektu (SuperZSI)
                        </a>
                    </h4>
                </div>
                <div id="divKontaktKlient" class="panel-collapse collapse">
                    <div class="panel-body ">

                        <div class="form-group">


                            @using (Html.BeginForm("Contact", "Pomoc", FormMethod.Post, new { @id = "formKontaktKlient", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)

                                string kontaktKlient = "" + @ViewBag.KontaktKlient + "";
                                
                                <div></div> @*Bez tego razor gubi sie przy kompilacji*@
                                if (kontaktKlient.Length > 0)
                                {
                                    <div class="col-xs-12">
                                        <label>Kontakt telefoniczny</label>
                                        <input value="@ViewBag.KontaktKlient" readonly="" class="form-control" />
                                    </div>
                                }

                            <div class="col-xs-12">
                                @Html.LabelFor(model => model.Tytul)
                                @Html.TextBoxFor(model => model.Tytul, new { @class = "form-control sprawdzane" })
                                @Html.ValidationMessageFor(model => model.Tytul)
                            </div>
                            <div class="col-xs-12">
                                @Html.LabelFor(model => model.NazwaEkranu)
                                @Html.TextBoxFor(model => model.NazwaEkranu, new { @class = "form-control sprawdzane" })
                                @Html.ValidationMessageFor(model => model.NazwaEkranu)
                            </div>
                            <div class="col-xs-12">
                                @Html.LabelFor(model => model.Tresc)
                                @Html.TextAreaFor(model => model.Tresc, new { @class = "form-control sprawdzane", @style = "margin-top: 0px; margin-bottom: 0px; height: 90px; resize:none;" })
                                @Html.ValidationMessageFor(model => model.Tresc)
                            </div>

                            <input type="hidden" value="4" name="zrodloMaila" id="zrodloMaila" />
                            <div class="col-xs-6">
                                @Html.LabelFor(model => model.Plik)
                                @Html.TextBoxFor(model => model.Plik, new { type = "file", @class = "sprawdzane" })
                            </div>

                            <div class="col-xs-6">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-lg btn-success btn-mobile alertNiezapisaniaZmian" id="btnKontaktKlientMailWyslij">
                                        <i class="fa fa-send">&nbsp;&nbsp;</i>
                                        Wyślij
                                    </button>
                                </div>
                            </div>
                            }


                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
