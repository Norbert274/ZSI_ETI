@model nclprospekt.Models.AdresDetaleWO

@{
    ViewBag.Title = "Usuwanie adresu";
}

<div id="AdresDiv" class="col-md-4 col-md-offset-4">

    <input id="status" value="@ViewBag.Status" data-message="@ViewBag.Message" style="display:none" />


    <div class="panel panel-primary panel-block">
            <div class="panel-heading">
                Poniższy adres zostanie usuniety, kontynuować?

       
            </div>

            <div class="panel-body">
            @using (Ajax.BeginForm("Delete", "Ustawienia",
            new AjaxOptions
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                OnFailure = "onAdresFailure",
                //OnSuccess = "onAdresMobileSuccess",
                OnComplete = "onAdresMobileCompleted"
               // UpdateTargetId = "adresDetale"
            },
            new { @id = "formAdresMobile" }
                        ))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.blokada_id)
                    @Html.HiddenFor(model => model.user_id)
                    @Html.HiddenFor(model => model.adres.Adres_Id)
                    @Html.HiddenFor(model => model.adres.AdresTyp_Id)
                    <div class="form-group">
                        @Html.LabelFor(model => model.adres.Nazwa)
                        @Html.TextBoxFor(model => model.adres.Nazwa, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.adres.Nazwa)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.adres.Ulica)
                        @Html.TextBoxFor(model => model.adres.Ulica, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.adres.Ulica)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.adres.Kod)
                        <div class="input-group">
                            <span class="input-group-addon">##-###</span>
                            @Html.TextBoxFor(model => model.adres.Kod, new { @class = "form-control", @readonly = "readonly" })
                        </div>

                        @Html.ValidationMessageFor(model => model.adres.Kod)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.adres.Miasto)
                        @Html.TextBoxFor(model => model.adres.Miasto, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.adres.Miasto)
                    </div>
                <div class="bezMarginesu">
        <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                            <button type="submit" class="btn btn-lg btn-success btn-mobile" id="btnAdresSubmit" name="btnAdresSubmit"><i class="fa fa-trash-o">&nbsp;&nbsp;</i> Usuń</button>
            </div>
    </div>
                </div>
            }
            <div class="bezMarginesu">
                <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <button type="button" class="btn btn-lg btn-danger btn-mobile detail-link-return">
                        <span aria-hidden="true"></span>
                        Wróć
                    </button>
                </div>
            </div>
            </div>
        </div>

</div>
