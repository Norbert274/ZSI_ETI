
@{
    ViewBag.Title = "Index";
}

@section scripts{

<link href="~/Content/plugins/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/plugins/dataTables.fontAwesome.css" rel="stylesheet" />
<link href="~/Content/plugins/responsive.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/plugins/responsive.dataTables.css" rel="stylesheet" />
<link href="~/Content/custom.css" rel="stylesheet" />
<script src="~/Scripts/custom-uzytkownicy.js"></script>
<script src="~/Scripts/plugins/DataTables/jquery.dataTables.min.js"></script>
<link href="~/Content/plugins/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />
<script src="~/Scripts/plugins/jquery-confirm/jquery-confirm.min.js"></script>
}

<input type="hidden" value="@ViewBag.Message" id="message" />
<input type="hidden" value="@ViewBag.Mode" id="mode" />

<div class="panel panel-primary panel-block">
    <!-- ** Panel TOP START** -->
    <div class="panel panel-heading">
        <div class="row ">
            <div class="col-xs-2">
                <strong style="padding-top:10px">Uzytkownicy</strong>
            </div>
            <span class="btn panelTop btnCLEAR pull-right" type="submit" id="btnDodaj"
                  onclick="location.href='@Url.Action("Create", "Uzytkownik")'">
                <i class="glyphicon glyphicon-plus-sign"></i>&nbsp; NOWY
            </span>
        </div>
    </div>
    <!-- ** Panel TOP END** -->
    <div class="panel-body">
        <!-- ** Uzytkownicy TABELA START** -->

        <table id="uzytkownicy" class="display" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th></th>
                    <th>Edytuj</th>
                    <th>Kopiuj</th>
                    <th>Edytuj Nowy</th>
                    <th>Nazwa</th>
                    <th>Nazwa Oddzialu</th>
                    <th>Grupa</th>
                    <th>Typ</th>
                    <th>Wielkosc</th>
                    <th>Siec Sprzedazy</th>
                    <th>Region</th>
                    <th>Usuń</th>
                    <th>Telefon</th>
                    <th>Rola</th>
                    <th>Emial</th>
                    <th>Login</th>
                    <th>Limit</th>
                    <th>Notyfikacje</th>
                    <th>Admin</th>
                    <th>SuperUser</th>
                </tr>
            </thead>

        </table>

        <!-- ** Uzytkownicy TABELA END** -->
    </div>
</div>