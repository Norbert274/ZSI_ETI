@model nclprospekt.Models.PomocPlikiListaWO

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FilesDownload</title>
</head>
<body>
    <div class="panel panel-primary panel-block">
        <div class="panel-heading">
            Lista plików udostępnionych do pobrania
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>@Html.DisplayNameFor(model => model.pomocPlikiLista.FirstOrDefault().TYTUL)</th>
                                <th><span class="dlugi_tekst">@Html.DisplayNameFor(model => model.pomocPlikiLista.FirstOrDefault().NAZWA_PLIKU)</span></th>
                                <th>Pobieranie plików</th>
                            </tr>
                        </thead>
                        @if (Model != null && Model.pomocPlikiLista.Count() > 0)
                        {
                            <tbody>

                                @foreach (var item in Model.pomocPlikiLista)
                                {
                                    <tr data-link="id=@item.NAZWA_PLIKU" class="handCursor">
                                        <td></td>
                                        <td>@Html.DisplayFor(modelitem => item.TYTUL)</td>
                                        <td>@Html.DisplayFor(modelitem => item.NAZWA_PLIKU)</td>
                                        <td><a href="@Url.Action("Download", "Pomoc", new { @nazwaPliku = item.NAZWA_PLIKU })" class="btn btn-success"><i class="fa fa-arrow-down fa-fw"></i>Pobierz plik</a>  </td>
                                    </tr>
                                }
                            </tbody>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>  
</body>
</html>
