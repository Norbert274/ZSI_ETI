@model nclprospekt.Models.AdresDetaleWO

@{
    ViewBag.Title = "Create";
 }
  
  @using (Ajax.BeginForm("Create", "Ustawienia",
            new AjaxOptions
            {
                HttpMethod = "POST",
                OnBegin="onAdresBegin",
                OnFailure = "onAdresFailure",
                OnComplete = "onAdresCompleted"//,
              //  UpdateTargetId = "modalBodyAdresDiv"

            }))
  {

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div>
        <input id="status" value="@ViewBag.Status" data-message="@ViewBag.Message" style="display:none"/>
        
        @Html.TextBoxFor(model => model.blokada_id, new { @readonly = "readonly", style = "display:none" })
        @Html.TextBoxFor(model => model.user_id, new { @readonly = "readonly", style = "display:none" })
        @Html.TextBoxFor(model => model.adres.Adres_Id, new {@readonly = "readonly", style = "display:none" })
        @Html.TextBoxFor(model => model.adres.AdresTyp_Id, new { @readonly = "readonly", style = "display:none" })

        <div class="panel panel-primary panel-block">
        <div class="panel-heading">
            Nowy adres
            <button type="button" id="addAdresBtn" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>
        
            <div class="panel-body">

                <div class="form-group">
                    @Html.LabelFor(model => model.adres.Nazwa)
                    @Html.TextBoxFor(model => model.adres.Nazwa, new { @class = "form-control", autofocus = "" })
                    @Html.ValidationMessageFor(model => model.adres.Nazwa)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.adres.Ulica)
                    @Html.TextBoxFor(model => model.adres.Ulica, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.adres.Ulica)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.adres.Kod)
                                        
                    <div class="input-group">
                        <span class="input-group-addon">##-###</span>
                        @Html.TextBoxFor(model => model.adres.Kod, new { @class = "form-control" })
                    </div>
                    
                    @Html.ValidationMessageFor(model => model.adres.Kod)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.adres.Miasto)
                    @Html.TextBoxFor(model => model.adres.Miasto, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.adres.Miasto)
                </div>


                <button type="submit" class="pull-left btn-lg btn btn-success" id="btnAdresSubmit" name="btnAdresSubmit">
                    <i class="fa fa-save">&nbsp;&nbsp;</i> 
                Zapisz</button>
            </div>
        </div>

    </div>
}

