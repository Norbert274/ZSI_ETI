@model nclprospekt.Models.ForgottenPasswordModel
@{
    ViewBag.Title = "Przypomnienie hasła";
}
<style>
    .form-signin {
        margin: 0 auto;
        max-width: 330px;
        padding: 15px;
    }
</style>

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h3>@ViewBag.Message</h3>
            @using (Html.BeginForm("ForgottenPassword", "Account"))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <h2 class="form-signin-heading">Reset hasła</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.UserName) })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                <br />
                <input type="submit" value="Resetuj hasło" class="btn btn-lg btn-primary btn-block" />
            }
        </div>
    </div>
    <!-- /.row -->
</div>
